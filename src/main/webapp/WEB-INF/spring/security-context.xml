<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="fiveleavesAccessDenied" class="net.fiveleaves.security.FiveleavesAccessDeniedHandler"></bean>
	<bean id="bcryptPasswordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
	<bean id="fiveleavesUserDetailsService" class="net.fiveleaves.security.FiveleavesUserDetailsService"></bean>

	<security:http>
	
		<security:intercept-url pattern="/user/all" access="permitAll"/>
		
		<security:intercept-url pattern="/user/mypage" access="hasRole('ROLE_USER')"/>
	
		<security:access-denied-handler ref="fiveleavesAccessDenied"/>
		
		<security:form-login login-page="/user/fiveleavesLogin" default-target-url="/club/list"/>
		
		<security:logout logout-url="/includes/header" invalidate-session="true"
			delete-cookies="remember-me,JSESSION_ID" logout-success-url="/user/main"/>
		
		<security:remember-me data-source-ref="dataSource" token-validity-seconds="604800" /> <!-- 7일 -->
	
	</security:http>
	
	<security:authentication-manager>
	
		<security:authentication-provider user-service-ref="fiveleavesUserDetailsService">
			
			<security:password-encoder ref="bcryptPasswordEncoder"/>
		
		</security:authentication-provider>
	
	</security:authentication-manager>

</beans>
